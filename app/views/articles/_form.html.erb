<% if @article.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @article.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>
<%=  simple_form_for @article, input_html: {multipart: true}  do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.file_field :image %>
  <div style="width: 100%"></div>
  <%= f.button :submit, class:"mt-2"%>
<% end %>

