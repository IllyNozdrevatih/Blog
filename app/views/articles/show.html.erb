
<div class="row">
  <div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4"><%= @article.name %></h1>

    <!-- Author -->
    <p class="lead">
      by
      <%= @article.user.email %>
    </p>

    <hr>

    <!-- Date/Time -->
    <p>Posted on <%= @article.updated_at.strftime("%d-%m-%y %T") %></p>

    <hr>

    <!-- Preview Image -->
    <%= image_tag @article.image.url(:big) , class:"img-fluid rounded" , style: "width:900px;height:300px" %>

    <hr>

    <!-- Post Content -->
    <p class="lead"><%= @article.description %></p>
    <p><%=link_to 'Back' , articles_path %></p>
  </div>
</div>