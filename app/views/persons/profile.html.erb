<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <%= image_tag article.image.url(:thumb) ,  class:"img-fluid" , style: "height:200px"%>
        <div class="card-body">
          <p class="card-text"><%= article.name %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%=link_to "View" , article_path(article) ,  class:"btn btn-sm btn-outline-secondary" %>
              <%=link_to "Edit" , edit_article_path(article) ,  class:"btn btn-sm btn-outline-secondary" %>
              <%=link_to "Delete" , article_path(article) , method: :delete,  class:"btn btn-sm btn-outline-secondary" %>
            </div>
            <small class="text-muted" style="font-size:65%">updated at:<%= article.updated_at.strftime("%d-%m-%y %T") %></small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>